<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_title_height"
            android:id="@+id/tv_detail_mov_title"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="@dimen/detail_title_textsize"
            android:paddingLeft="@dimen/detail_padding_left"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_img_desc_height"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_movie_detail"
                android:layout_width="@dimen/detail_img_view_width"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/release_rating_padding_left">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/released_on"
                    android:textSize="@dimen/lbl_released_size"
                    android:textStyle="italic"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_released"
                    android:textSize="@dimen/detail_title_textsize"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rating"
                    android:textSize="@dimen/lbl_released_size"
                    android:textStyle="italic"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_rating"
                    android:textSize="@dimen/detail_title_textsize"
                    android:textStyle="bold"/>

                <ToggleButton
                    android:id="@+id/btn_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/favorite_selector"
                    android:textOff=""
                    android:textOn=""
                    />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:id="@+id/tv_detail_mov_overview"
            android:gravity="fill_horizontal"
            android:paddingLeft="@dimen/detail_overview_padding_left"
            android:textSize="@dimen/detail_title_textsize"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/trailers_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_trailers"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lbl_trailers_height"
                android:paddingLeft="@dimen/lbl_trailers_padding_left"
                android:text="@string/label_trailers"
                android:textSize="@dimen/lbl_trailers_textsize"
                android:textStyle="bold"
                android:visibility="invisible"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/lbl_review"
            android:layout_marginTop="@dimen/lbl_review_margin_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lbl_review_height"
            android:paddingLeft="@dimen/lbl_review_padding_left"
            android:text="@string/lbl_user_reviews"
            android:textSize="@dimen/lbl_review_textsize"
            android:textStyle="bold"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/tv_review_padding_left"
            android:textSize="@dimen/tv_review_textsize"
            android:textStyle="normal"
            />

    </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/detail_pb_loading_indicator"
        android:layout_height="@dimen/detail_loading_indicator_height"
        android:layout_width="@dimen/detail_loading_indicator_width"
        android:layout_gravity="center"
        android:visibility="invisible" />



</FrameLayout>